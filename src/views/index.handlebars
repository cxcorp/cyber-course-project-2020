<h1>Welcome to the Electronics Forum</h1>
<p>This forum is for electronics enthusiasts. Feel free to say hello!</p>
<br />

<table class="thread-table">
    <thead>
        <tr>
            <th></th>
            <th>Topic</th>
            <th class="w-20">Author</th>
            <th class="w-20">Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each threads}}
        <tr>
            <td>â–£</td>
            <td><a class="topic-list__link" href="{{thread_href id}}">{{title}}</a></td>
            <td>{{author_name}}</td>
            <td>{{stringify_thread_timestamp create_date}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{#if user}}
<div class="row">
    <div class="col">
        <a href="/topics/new" class="btn btn-primary">Create a new topic</a>
    </div>
</div>
{{/if}}